@import 'normalize.css'

a.glyphicon.glyphicon-envelope
	color rgba(255,255,255,0.8);
	text-decoration none

body
	color black
	font-family sans-serif arial
	font-size 16px

div.col-sm-2
	margin-left 15px
	padding-left 1px
	padding-right 1px
	width 12%
	
footer
	background #51BAE5
	color rgba(255,255,255,0.8);
	text-align center
	
header
	background #51BAE4
	color white
	overflow hidden
	padding 0.5em
	position relative

header h1
	font-size 2.5em
	font-weight normal
	magin 0 70px 0 0
	
header #logo
	border-right 1px solid white
	float left
	margin-right 0.5em
	padding-right 0.5em
	
header #logo img
	width 100px
	
#botones
	height 32px
	margin-left 224px
	margin-bottom 10px
	width 100px
	
#formatoPrueba
	border 1px solid rgb(10, 9, 9)
	margin-top: 1%
	margin-bottom: 1%
	margin-left: auto
	margin-right: auto
	width: 50%

#formatoPrueba tr td
	border 1px solid rgb(10, 9, 9)

#formatoPrueba tr td #title, strong#title
	font-size 2em
	margin 10px 0px

#formatoPrueba th
	border 1px solid rgb(10, 9, 9)

#menu
	background #5B8BCD
	position relative

#menu ul
	list-style none
	margin 0
	padding 0 6em 0 .5em

#menu ul li
	display inline-block
	margin 0 0.5em
	
#menu ul li a
	border-radius .2em
	color white
	display block
	padding .5em
	text-decoration none
	-webkit-transition .3s
	
#menu ul li a:hover
	background #210C4D

.center-block
	margin-left 25%
	margin-right 25%
	
.col
	width 30%

div.descarga
	margin 1% 35%
	width 50%
	
.itemCP
	border 3px solid #5B8BCD
	border-radius .5em
	display block
	margin 1.5em
	min-height 128px
	
.itemCP p
	margin 20px 20px
	padding 20px 0px
	
.itemCP .nombreCU
	margin 8px 0px 0px 20px
	font-size 1.5em
	position absolute
	text-decoration none

.itemCP .glyphicon-trash, .itemCP .glyphicon-pencil
	float right
	margin 8px 4px 0px 0px
	text-decoration none

.logoUnivalle
	margin-left 40%
	width 30%

@media screen and (max-width 700px)
	
	header h1
		font-size 1.5em
		text-align center
	
	#content
		margin 0px
		
	#formatoPrueba tr td #title
		font-size 1em
	
	.itemCP .nombreCU
		width 150px
		